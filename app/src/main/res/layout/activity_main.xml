<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tzd.demoruninphone.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:onClick="show"
            android:text="显示" />

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:onClick="hide"
            android:text="影藏" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view"
        android:visibility="visible"
        android:background="#121924">


        <android.support.v7.widget.CardView
            android:layout_width="204px"
            app:cardCornerRadius="102px"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true"
            android:layout_height="204px">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/incoming_img_bg"
                android:src="@drawable/icon_contact_image_bg"
                android:scaleType="center"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="155px"
                android:gravity="center"
                android:id="@+id/incoming_firName"
                android:textColor="#fff"
                android:layout_gravity="bottom|right"
                android:textSize="150px"
                android:text="李"
                android:layout_height="155px" />
        </android.support.v7.widget.CardView>

